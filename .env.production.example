# Production Environment Configuration
# Copy this file to .env.production and update the values

# Application Environment
APP_ENV=production
LOG_LEVEL=INFO
WORKERS=4

# Database Configuration
POSTGRES_DB=cloudsentry
POSTGRES_USER=cloudsentry
POSTGRES_PASSWORD=your_secure_postgres_password_here
POSTGRES_PORT=5432
DATABASE_URL=postgresql+asyncpg://cloudsentry:your_secure_postgres_password_here@postgres:5432/cloudsentry

# Redis Configuration
REDIS_PASSWORD=your_secure_redis_password_here
REDIS_PORT=6379
REDIS_URL=redis://:your_secure_redis_password_here@redis:6379/0

# AWS Configuration
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_aws_access_key_here
AWS_SECRET_ACCESS_KEY=your_aws_secret_key_here

# Security Configuration
JWT_SECRET_KEY=your_jwt_secret_key_minimum_32_characters_long
ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com
ALLOWED_HOSTS=yourdomain.com,www.yourdomain.com

# SSL/TLS Configuration
SSL_CERT_PATH=/app/ssl/cloudsentry.crt
SSL_KEY_PATH=/app/ssl/cloudsentry.key

# Monitoring Configuration
PROMETHEUS_PORT=9090
GRAFANA_PORT=3001
GRAFANA_USER=admin
GRAFANA_PASSWORD=your_secure_grafana_password_here

# Flower (Celery Monitoring)
FLOWER_PORT=5555
FLOWER_USER=admin
FLOWER_PASSWORD=your_secure_flower_password_here

# Web Server Configuration
HTTP_PORT=80
HTTPS_PORT=443
APP_PORT=8000

# Notification Configuration
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK
EMAIL_SMTP_HOST=smtp.gmail.com
EMAIL_SMTP_PORT=587
EMAIL_USERNAME=your_email@gmail.com
EMAIL_PASSWORD=your_email_password

# Build Information
BUILD_DATE=2024-01-15T12:00:00Z
VCS_REF=abc123def
VERSION=1.0.0

# Performance Configuration
MAX_CONNECTIONS=100
CONNECTION_TIMEOUT=30
READ_TIMEOUT=30
WRITE_TIMEOUT=30

# Security Headers
SECURE_SSL_REDIRECT=true
SECURE_HSTS_SECONDS=31536000
SECURE_HSTS_INCLUDE_SUBDOMAINS=true
SECURE_HSTS_PRELOAD=true
SECURE_CONTENT_TYPE_NOSNIFF=true
SECURE_BROWSER_XSS_FILTER=true
SECURE_FRAME_OPTIONS=DENY

# Rate Limiting
RATELIMIT_ENABLED=true
RATELIMIT_DEFAULT=100/hour
RATELIMIT_STORAGE_URL=redis://:your_secure_redis_password_here@redis:6379/1

# Session Configuration
SESSION_COOKIE_SECURE=true
SESSION_COOKIE_HTTPONLY=true
SESSION_COOKIE_SAMESITE=Lax
SESSION_COOKIE_AGE=3600

# File Upload Configuration
MAX_UPLOAD_SIZE=10485760  # 10MB
UPLOAD_PATH=/app/data/uploads
ALLOWED_EXTENSIONS=txt,json,csv,xml

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *  # Daily at 2 AM
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=cloudsentry-backups
BACKUP_ENCRYPTION_KEY=your_backup_encryption_key_here

# Audit Configuration
AUDIT_LOG_RETENTION_DAYS=90
AUDIT_ENABLED=true
AUDIT_LOG_LEVEL=INFO

# Multi-Account Configuration
ENABLE_MULTI_ACCOUNT=true
MASTER_ACCOUNT_ID=123456789012
ORGANIZATION_ID=o-123456789

# Event Processing Configuration
EVENT_BATCH_SIZE=100
EVENT_PROCESSING_TIMEOUT=300
EVENT_RETRY_ATTEMPTS=3
EVENT_RETRY_DELAY=60

# Cache Configuration
CACHE_DEFAULT_TIMEOUT=300
CACHE_KEY_PREFIX=cloudsentry
CACHE_REDIS_DB=2

# Metrics Configuration
METRICS_ENABLED=true
METRICS_PORT=8001
METRICS_PATH=/metrics

# Health Check Configuration
HEALTH_CHECK_INTERVAL=30
HEALTH_CHECK_TIMEOUT=10
HEALTH_CHECK_RETRIES=3

# Development Overrides (set to false in production)
DEBUG=false
TESTING=false
DEVELOPMENT=false
