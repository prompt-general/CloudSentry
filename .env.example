# =============================================================================
# CloudSentry Multi-Cloud Configuration
# =============================================================================

# =============================================================================
# CORE APPLICATION SETTINGS
# =============================================================================
APP_NAME=CloudSentry
APP_ENV=production
DEBUG=false

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
DATABASE_URL=postgresql+asyncpg://cloudsentry:changeme@localhost:5432/cloudsentry
DB_USER=cloudsentry
DB_PASSWORD=changeme
DB_NAME=cloudsentry

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================
REDIS_URL=redis://localhost:6379/0
WEBSOCKET_ENABLED=true

# =============================================================================
# CLOUD PROVIDER SETTINGS
# =============================================================================
# Enable/disable cloud providers
ENABLE_AWS=false
ENABLE_AZURE=true
ENABLE_GCP=false

# Default cloud provider for operations
DEFAULT_CLOUD_PROVIDER=azure

# =============================================================================
# AZURE CONFIGURATION
# =============================================================================
# Azure Authentication
AZURE_SUBSCRIPTION_ID=your-subscription-id
AZURE_TENANT_ID=your-tenant-id
AZURE_CLIENT_ID=your-client-id
AZURE_CLIENT_SECRET=your-client-secret

# =============================================================================
# AZURE EVENT HUB CONFIGURATION (Option A - Real-time)
# =============================================================================
# Use this section for Event Hub-based real-time event ingestion
AZURE_EVENTHUB_CONNECTION_STRING=Endpoint=sb://cloudsentry-eh.servicebus.windows.net/;SharedAccessKeyName=RootManageSharedAccessKey;SharedAccessKey=your-key;EntityPath=insights-activity-logs
AZURE_EVENTHUB_NAME=insights-activity-logs
AZURE_EVENTHUB_CONSUMER_GROUP=cloudsentry-consumer

# Azure Storage for Event Hub checkpoints
AZURE_STORAGE_CONNECTION_STRING=DefaultEndpointsProtocol=https;AccountName=cloudsentrystorage;AccountKey=your-storage-key;EndpointSuffix=core.windows.net
AZURE_STORAGE_CONTAINER=cloudsentry-checkpoints

# =============================================================================
# AZURE LOG ANALYTICS CONFIGURATION (Option B - Simpler)
# =============================================================================
# Use this section for Log Analytics-based event ingestion
# Comment out Event Hub section above if using this option
# AZURE_LOG_ANALYTICS_WORKSPACE_ID=your-workspace-id
# AZURE_LOG_ANALYTICS_WORKSPACE_KEY=your-workspace-key
# AZURE_LOG_ANALYTICS_WORKSPACE_NAME=cloudsentry-law
# AZURE_LOG_ANALYTICS_QUERY_INTERVAL=300  # Query every 5 minutes

# =============================================================================
# AZURE MONITOR REST API CONFIGURATION (Option C - API-based)
# =============================================================================
# Use this section for direct Azure Monitor API access
# Comment out Event Hub and Log Analytics sections above if using this option
# AZURE_MONITOR_API_ENDPOINT=https://management.azure.com/
# AZURE_MONITOR_API_VERSION=2015-04-01
# AZURE_MONITOR_POLL_INTERVAL=300  # Poll every 5 minutes

# =============================================================================
# AWS CONFIGURATION (for multi-cloud setups)
# =============================================================================
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-aws-access-key-id
AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key
AWS_SESSION_TOKEN=your-aws-session-token

# =============================================================================
# MULTI-ACCOUNT SETTINGS
# =============================================================================
ENABLE_MULTI_ACCOUNT=false
MEMBER_ACCOUNT_ROLE_NAME=CloudSentryAuditRole
AUTO_DISCOVER_ACCOUNTS=true
EXCLUDED_ACCOUNTS=

# =============================================================================
# EVENT COLLECTION SETTINGS
# =============================================================================
# AWS Event Collection
EVENT_BRIDGE_BUS=default
SQS_QUEUE_URL=

# Azure Event Collection
AZURE_EVENT_CATEGORIES=Administrative,Security,Policy,ResourceHealth,Autoscale,Recommendation

# =============================================================================
# NOTIFICATION SETTINGS
# =============================================================================
# Slack Notifications
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK

# Email Notifications
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_USE_TLS=true
NOTIFICATION_EMAIL=admin@yourcompany.com

# =============================================================================
# SECURITY SETTINGS
# =============================================================================
JWT_SECRET_KEY=your-super-secret-jwt-key-change-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=30

# CORS Settings
CORS_ORIGINS=http://localhost:3000,http://localhost:8000,https://yourdomain.com

# Security Headers
SECURITY_HEADERS=true
RATE_LIMITING=true

# =============================================================================
# SCHEDULER SETTINGS
# =============================================================================
FULL_AUDIT_INTERVAL_HOURS=24
MULTI_ACCOUNT_AUDIT_INTERVAL_HOURS=24
MAX_CONCURRENT_AUDITS=3

# Azure-specific audit settings
AZURE_AUDIT_INTERVAL_HOURS=12
AZURE_RESOURCE_SCAN_INTERVAL_HOURS=6

# =============================================================================
# WEB SERVER SETTINGS
# =============================================================================
HOST=0.0.0.0
PORT=8000
WORKERS=4
RELOAD=false

# =============================================================================
# MONITORING SETTINGS
# =============================================================================
# Prometheus Metrics
METRICS_ENABLED=true
METRICS_PORT=9090

# Health Checks
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_INTERVAL=30

# =============================================================================
# LOGGING SETTINGS
# =============================================================================
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE=cloudsentry.log
LOG_MAX_SIZE=100MB
LOG_BACKUP_COUNT=5

# Azure-specific logging
AZURE_LOG_LEVEL=INFO
AZURE_LOG_FORMAT=json

# =============================================================================
# PERFORMANCE SETTINGS
# =============================================================================
# Database Connection Pool
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=30
DB_POOL_TIMEOUT=30

# Redis Connection Pool
REDIS_POOL_SIZE=10
REDIS_MAX_CONNECTIONS=20

# Event Processing
EVENT_BATCH_SIZE=100
EVENT_PROCESSING_TIMEOUT=30
MAX_CONCURRENT_EVENTS=10

# =============================================================================
# CACHE SETTINGS
# =============================================================================
# Redis Cache
CACHE_TTL=3600
CACHE_PREFIX=cloudsentry
CACHE_MAX_SIZE=1000

# Azure-specific cache
AZURE_CACHE_TTL=1800
AZURE_SUBSCRIPTION_CACHE_TTL=3600

# =============================================================================
# FILE UPLOAD SETTINGS
# =============================================================================
MAX_FILE_SIZE=10MB
UPLOAD_PATH=/app/uploads
ALLOWED_EXTENSIONS=.txt,.log,.json,.csv

# =============================================================================
# BACKUP SETTINGS
# =============================================================================
# Database Backup
BACKUP_ENABLED=true
BACKUP_INTERVAL_HOURS=24
BACKUP_RETENTION_DAYS=30
BACKUP_STORAGE=local

# Azure Backup
AZURE_BACKUP_ENABLED=false
AZURE_BACKUP_STORAGE_ACCOUNT=cloudsentry-backup
AZURE_BACKUP_CONTAINER=backups

# =============================================================================
# AUDIT SETTINGS
# =============================================================================
AUDIT_LOGGING=true
AUDIT_RETENTION_DAYS=90
AUDIT_INCLUDE_SENSITIVE=false

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================
# Development overrides (set to false in production)
DEV_MODE=false
DEV_RELOAD=true
DEV_DEBUG_SQL=false
DEV_MOCK_AZURE=false

# =============================================================================
# TESTING SETTINGS
# =============================================================================
# Testing configuration
TESTING=false
TEST_DATABASE_URL=postgresql+asyncpg://test:test@localhost:5432/cloudsentry_test
TEST_REDIS_URL=redis://localhost:6379/1

# =============================================================================
# FEATURE FLAGS
# =============================================================================
# Enable/disable specific features
FEATURE_DASHBOARD=true
FEATURE_API_DOCS=true
FEATURE_WEBSOCKETS=true
FEATURE_AZURE_RULES=true
FEATURE_AWS_RULES=true
FEATURE_MULTI_CLOUD=true

# =============================================================================
# RATE LIMITING
# =============================================================================
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60
RATE_LIMIT_STRATEGY=sliding-window

# =============================================================================
# SESSION SETTINGS
# =============================================================================
SESSION_SECRET=your-session-secret-key
SESSION_TIMEOUT=3600
SESSION_SECURE=true
SESSION_HTTP_ONLY=true

# =============================================================================
# SSL/TLS SETTINGS
# =============================================================================
SSL_ENABLED=true
SSL_CERT_PATH=/app/ssl/cert.pem
SSL_KEY_PATH=/app/ssl/key.pem

# =============================================================================
# PRODUCTION OVERRIDES
# =============================================================================
# Production-specific settings (uncomment for production)
# DEBUG=false
# LOG_LEVEL=WARNING
# RELOAD=false
# WORKERS=8
# DB_POOL_SIZE=50
# DB_MAX_OVERFLOW=50
# CACHE_TTL=7200
# BACKUP_ENABLED=true
# AUDIT_LOGGING=true
# SECURITY_HEADERS=true
# RATE_LIMITING=true

# =============================================================================
# DOCKER OVERRIDES
# =============================================================================
# Docker-specific settings (usually set via docker-compose)
# DATABASE_URL=postgresql+asyncpg://cloudsentry:changeme@postgres:5432/cloudsentry
# REDIS_URL=redis://redis:6379/0

# =============================================================================
# KUBERNETES OVERRIDES
# =============================================================================
# Kubernetes-specific settings (usually set via ConfigMap/Secret)
# DATABASE_URL=postgresql+asyncpg://cloudsentry:changeme@postgres:5432/cloudsentry
# REDIS_URL=redis://redis:6379/0

# =============================================================================
# ENVIRONMENT-SPECIFIC OVERRIDES
# =============================================================================
# Override settings based on environment
# .env.development - for development
# .env.staging - for staging
# .env.production - for production

# =============================================================================
# CUSTOM SETTINGS
# =============================================================================
# Add your custom settings here
# CUSTOM_SETTING=value